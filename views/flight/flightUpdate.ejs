<div class="container">
  <h1>Update Flight</h1>
  <form action="/flight.route/update/<%=flight._id%>" method="POST">
    <div class="form-group">
      <label for="roll">Flight Number</label>
      <input type="text" class="form-control" id="roll" name="roll"
      placeholder="Flight Number" value = '<%= typeof flight.roll != 'undefined'
      ? flight.roll : '' %>' />
    </div>
    <div class="form-group">
      <label for="name">Flight Name</label>
      <input type="text" class="form-control" id="name" name="name"
      placeholder="Flight Name" value = '<%= typeof flight.name != 'undefined' ?
      flight.name : '' %>' />
    </div>
    <input type="submit" name="submit" value="Update" class="btn btn-success" />
  </form>
  <br />
  <a href="/flight.route/all" class="">
    <i class="fas fa-home" style="color:green">View List</i>
  </a>
</div>
