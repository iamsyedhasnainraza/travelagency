<div class="container">
  <h1>Add a New Flight</h1>
  <form action="/admin/fadd" method="POST">
    <div class="form-group">
      <label for="roll">Flight Number</label>
      <input
        type="text"
        class="form-control"
        id="no"
        name="nn"
        placeholder="Number"
      />
    </div>
    <div class="form-group">
      <label for="name">FlightName</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Name"
      />
    </div>
    <input type="submit" name="submit" value="Add" class="btn btn-success" />
  </form>
</div>
