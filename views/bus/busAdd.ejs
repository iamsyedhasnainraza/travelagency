<div class="container">
  <h1>Add a New Bus</h1>
  <form action="/admin/badd" method="POST">
    <div class="form-group">
      <label for="no">Hotel Number</label>
      <input
        type="text"
        class="form-control"
        id="no"
        name="no"
        placeholder="Number"
      />
    </div>
    <div class="form-group">
      <label for="name">Bus Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Name"
      />
    </div>
    <input type="submit" name="submit" value="Add" class="btn btn-success" />
  </form>
</div>
