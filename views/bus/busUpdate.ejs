<div class="container">
  <h1>Update Hotel</h1>
  <form action="/admin/bupdate/<%=bus._id%>" method="POST">
    <div class="form-group">
      <label for="roll">Number</label>
      <input type="text" class="form-control" id="no" name="no"
      placeholder="Number" value = '<%= typeof bus.no != 'undefined'
      ? bus.no : '' %>' />
    </div>
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name"
      placeholder="Name" value = '<%= typeof bus.name != 'undefined' ?
      bus.name : '' %>' />
    </div>
    <input type="submit" name="submit" value="Update" class="btn btn-success" />
  </form>
  <br />
  <a href="/admin/ball" class="">
    <i class="fas fa-home" style="color:green">View List</i>
  </a>
</div>
