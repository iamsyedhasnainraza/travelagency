<div class="container">
  <h1>Update Bus</h1>
  <form action="/bus.route/update/<%=bus._id%>" method="POST">
    <div class="form-group">
      <label for="roll">Bus Number</label>
      <input type="text" class="form-control" id="roll" name="roll"
      placeholder="Number" value = '<%= typeof bus.roll != 'undefined'
      ? bus.roll : '' %>' />
    </div>
    <div class="form-group">
      <label for="name">Bus Name</label>
      <input type="text" class="form-control" id="name" name="name"
      placeholder="Name" value = '<%= typeof bus.name != 'undefined' ?
      bus.name : '' %>' />
    </div>
    <input type="submit" name="submit" value="Update" class="btn btn-success" />
  </form>
  <br />
  <a href="/bus.route/all" class="">
    <i class="fas fa-home" style="color:green">View List</i>
  </a>
</div>
