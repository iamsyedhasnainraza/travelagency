<div class="container">
  <h1>Update Hotel</h1>
  <form action="/admin/update/<%=hotel._id%>" method="POST">
    <div class="form-group">
      <label for="roll">Roll Number</label>
      <input type="text" class="form-control" id="roll" name="roll"
      placeholder="Roll Number" value = '<%= typeof hotel.no != 'undefined'
      ? hotel.no : '' %>' />
    </div>
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name"
      placeholder="Name" value = '<%= typeof hotel.name != 'undefined' ?
      hotel.name : '' %>' />
    </div>
    <input type="submit" name="submit" value="Update" class="btn btn-success" />
  </form>
  <br />
  <a href="/admin/all" class="">
    <i class="fas fa-home" style="color:green">View List</i>
  </a>
</div>
