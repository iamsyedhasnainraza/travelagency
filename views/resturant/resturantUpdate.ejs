<div class="container">
  <h1>Update Resturant</h1>
  <form action="/resturant.route/update/<%=resturant._id%>" method="POST">
    <div class="form-group">
      <label for="roll">Resturant Number</label>
      <input type="text" class="form-control" id="roll" name="roll"
      placeholder="Resturant Number" value = '<%= typeof resturant.roll != 'undefined'
      ? resturant.roll : '' %>' />
    </div>
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name"
      placeholder="Resturant Name" value = '<%= typeof resturant.name != 'undefined' ?
      resturant.name : '' %>' />
    </div>
    <input type="submit" name="submit" value="Update" class="btn btn-success" />
  </form>
  <br />
  <a href="/resturant.route/all" class="">
    <i class="fas fa-home" style="color:green">View List</i>
  </a>
</div>
